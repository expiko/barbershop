root = true

charset = utf-8

insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 400

[**.css]
indent_style = space
indent_size = 2

[**.js]
indent_style = tab

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
